<div>
    {{#if highscore}}
    <h3 id="scoreheader">your high score!</h3>
    <p id="playerscore">{{username}}:{{highscore}}</p>
    {{else}}
    <p class="noscore">you don't have any scores! :(</p>
    {{/if}}
</div>

 {{#if highscore}}
